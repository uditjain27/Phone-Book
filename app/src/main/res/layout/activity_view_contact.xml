<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewContact"
    android:background="@drawable/fullbody_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/header_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhoneBook"
                android:textSize="45dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"

                android:fontFamily="serif-monospace"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Contact"
                android:onClick="addnewcontact"
                android:textColor="#1f7f8e"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="search Contact"
                android:onClick="searchcontact"
                android:textColor="#1f7f8e"/>

            <ListView
                android:id="@+id/contactlist"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginHorizontal="5dp"
                android:dividerHeight="2dp"
                android:divider="@android:color/black"
                android:background="@drawable/body_bg"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#5ed3e0"
                android:text="Java Project made by Udit Jain and Shivam Garg"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/holo_blue_dark"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>