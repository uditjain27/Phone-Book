<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchByName"
    android:background="@drawable/fullbody_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/header_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhoneBook"
            android:textSize="45dp"
            android:fontFamily="serif-monospace"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="View By : "
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"/>

            <RadioButton
                android:id="@+id/rbname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="radioclickedname"
                android:text="Name"
                android:textSize="18dp" />
            <RadioButton
                android:id="@+id/rbnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:onClick="radioclickednumber"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/namebox"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the Name : "
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/searchbyname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="textCapSentences"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/numberbox"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="-60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the Number : "
                android:textSize="20dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/searchbynumber"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="textCapSentences"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonsearch"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="105dp"
                android:text="Search"
                android:textSize="20dp"
                android:visibility="gone"
                android:onClick="search"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <ListView
                android:id="@+id/displaysearchedcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="50dp"
                android:dividerHeight="2dp"
                android:divider="@android:color/black"
                android:background="@drawable/body_bg"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#5ed3e0"
            android:text="Java Project made by Udit Jain and Shivam Garg"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textColor="@android:color/holo_blue_dark"/>
    </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>